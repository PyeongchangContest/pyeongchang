<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pyeongchang.conch.conch.MypageActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_height="202dp"
        android:layout_width="354dp"
        android:id="@+id/layout_userinfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_comlist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:layout_marginLeft="129dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Score"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.386" />

        <TextView
            android:id="@+id/mypage_userScore"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="4214p"
            android:textSize="22sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/mypage_description"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mypage_userID"
            app:layout_constraintVertical_bias="0.424" />

        <TextView
            android:text="Country"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:id="@+id/textView11"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/mypage_userID"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mypage_userNation"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.059" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/walking"
            android:id="@+id/mypage_userPicture"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/mypage_changeImage"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:text="change"
            android:textSize="10sp"
            android:onClick="onClick"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mypage_userPicture"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:text="save edit"
            android:layout_width="88dp"
            android:layout_height="58dp"
            android:id="@+id/mypage_saveDescription"
            android:textSize="12sp"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="@+id/mypage_userID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.93"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <EditText
            android:id="@+id/mypage_description"
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:text="Hello? world"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mypage_saveDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.933" />

        <TextView
            android:text="USERID"
            android:layout_width="116dp"
            android:layout_height="33dp"
            android:id="@+id/mypage_userID"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="11dp"
            android:textAlignment="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="description"
            android:layout_width="75dp"
            android:layout_height="18dp"
            android:id="@+id/textView13"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mypage_userPicture"
            app:layout_constraintVertical_bias="0.766"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.01" />

        <TextView
            android:text="ID"
            android:layout_width="58dp"
            android:layout_height="33dp"
            android:id="@+id/textView10"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/mypage_userID"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.902"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="107dp"
            android:layout_height="37dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/mypage_userNation"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mypage_userID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.261"
            android:layout_marginRight="-5dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_height="280dp"
        android:layout_width="360dp"
        android:id="@+id/layout_comlist"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:text="community list"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ScrollView
            android:layout_width="340dp"
            android:layout_height="256dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

            <LinearLayout
                android:id="@+id/mypage_communityList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#ff0000"
                    android:gravity="center"
                    android:text="sample"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
