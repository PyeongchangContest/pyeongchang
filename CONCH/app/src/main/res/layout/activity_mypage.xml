<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pyeongchang.conch.conch.MypageActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_height="202dp"
        android:layout_width="354dp"
        android:id="@+id/layout_userinfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_comlist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.44"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <TextView
            android:text="Score"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:id="@+id/textView8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageButton2"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:text="4214p"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:id="@+id/textView12"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintVertical_bias="0.823"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:text="Country"
            android:layout_width="116dp"
            android:layout_height="36dp"
            android:id="@+id/textView11"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.04000002" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/walking"
            android:id="@+id/imageButton2"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <Button
            android:text="save edit"
            android:layout_width="88dp"
            android:layout_height="58dp"
            android:id="@+id/button"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.93"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="252dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:text="Hello? world"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button" />

        <TextView
            android:text="USERID"
            android:layout_width="116dp"
            android:layout_height="33dp"
            android:id="@+id/textView6"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAlignment="center" />

        <TextView
            android:text="description"
            android:layout_width="75dp"
            android:layout_height="18dp"
            android:id="@+id/textView13"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButton2"
            app:layout_constraintVertical_bias="0.58000004"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.11" />

        <TextView
            android:text="ID"
            android:layout_width="58dp"
            android:layout_height="33dp"
            android:id="@+id/textView10"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.79"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.24" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_height="280dp"
        android:layout_width="360dp"
        android:id="@+id/layout_comlist"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:text="community list"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ScrollView
            android:layout_height="256dp"
            android:layout_width="340dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:text="korea torch club"
                    android:layout_width="match_parent"
                    android:id="@+id/textView17"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_height="70dp"
                    android:background="#ff0000"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="Daejeon torch!!"
                    android:layout_width="match_parent"
                    android:id="@+id/textView18"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_height="70dp"
                    android:background="#01a240"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="secret community*"
                    android:layout_width="match_parent"
                    android:id="@+id/textView19"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_height="70dp"
                    android:background="#5a51c6"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="LOCKED"
                    android:layout_width="match_parent"
                    android:id="@+id/textView20"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_height="70dp"
                    android:background="#333333"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="LOCKED"
                    android:layout_width="match_parent"
                    android:id="@+id/textView21"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_height="70dp"
                    android:background="#222222"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
